@model AddEditProductDto
@{
    ViewData["Title"] = "Create";

    SelectList Brand = new SelectList(Model.productBrands, "id", "name");
    SelectList Category = new SelectList(ViewBag.Category, "id", "name");
}

<h2>Create</h2>

<form asp-controller="Product" asp-action="Create" class="form-group" method="post" enctype="multipart/form-data">
    <div class="m-2">
        <label asp-for="name" class="py-2">Product Name</label>
        <input class="form-control" type="text" asp-for="name" />
        <div class="m-auto text-center">
            <span asp-validation-for="name" class="text-danger shadow-sm "></span>
        </div>
    </div>

    <div class="m-2">
        <label asp-for="price" class="py-2"> Product Price </label>
        <input class="form-control" type="number" asp-for="price" />
        <div class="m-auto text-center">
            <span asp-validation-for="price" class="text-danger shadow-sm"></span>
        </div>
    </div>

    <div class="m-2">
        <label asp-for="quantity" class="py-2"> Product Quantity </label>
        <input class="form-control" type="number" asp-for="quantity" />
        <div class="m-auto text-center">
            <span asp-validation-for="quantity" class="text-danger shadow-sm"></span>
        </div>
    </div>

    <div class="m-2">
        <label asp-for="description" class="py-2"> Product Description </label>
        <input class="form-control" type="text" asp-for="description" />
        <div class="m-auto text-center">
            <span asp-validation-for="description" class="text-danger shadow-sm"></span>
        </div>
    </div>

    <div class="m-2">
        <input class="form-control" value="@Model.userId" type="hidden" asp-for="userId"/>
        <div class="m-auto text-center">
            <span asp-validation-for="userId" class="text-danger shadow-sm"></span>
        </div>
    </div>


    <div class="m-2">
        <label asp-for="ProductImages" class="py-2"> Product Images </label>
        <input multiple class="form-control" asp-for="ProductImages" />
        <div class="m-auto text-center">
            <span asp-validation-for="ProductImages" class="text-danger shadow-sm"></span>
        </div>
    </div>

    
    
    

