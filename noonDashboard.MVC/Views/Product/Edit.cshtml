}

<form asp-action="Edit" class="form-group" method="post">

    <input type="hidden" asp-for="sku" />
    <div class="m-2">
        <label asp-for="name" class="py-2">Product Name</label>
        <input class="form-control" type="text" asp-for="name" />
        <div class="m-auto text-center">
            <span asp-validation-for="name" class="text-danger shadow-sm "></span>
        </div>
    </div>

    <div class="m-2">
        <label asp-for="price" class="py-2"> Product Price </label>
